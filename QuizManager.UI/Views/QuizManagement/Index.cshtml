@using QuizManager.Models.Tables
@model IEnumerable<QuizManager.Models.Tables.Quiz>

@{
    ViewBag.Title = "My Quizzes";
}


<div class="container-fluid">
    <h2>My Quizzes</h2>
    <div class="row">
        <div class="col-2">
            @Html.Partial("_SideNavPartial")
        </div>
        <div id="mainBodyContainer" class="container col-10">
            @foreach (Quiz quiz in Model)
            {
                <div class="card mb-3">
                    <h5 class="card-header">
                        @quiz.Name
                    </h5>
                    <div class="card-body">

                        @Html.ActionLink("Manage", "QuizDetails", "QuizManagement", new {quizId = quiz.Id}, new {@class = "btn btn-primary"})
                    </div>
                </div>
            }
        </div>
    </div>
</div>